<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".visitor.lunch">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.BIRIYANI"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download5"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.MEALS"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download6"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.FRIED RICE(VEG,NON-VEG)"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download7"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.MANDHI"
        android:textAlignment="center"
        android:textSize="30sp"
            android:textColor="#000"
        android:layout_margin="8dp"
        android:textStyle="bold"
        />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download8"
            android:padding="8dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.NOODLES(VEG,NON-VEG)"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/download9"
            android:scaleType="centerCrop"
            android:padding="8dp"
            />

    </LinearLayout>
</ScrollView>