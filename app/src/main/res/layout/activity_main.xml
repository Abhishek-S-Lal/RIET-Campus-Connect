<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#00BCD4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:background="#D6FDFE"
        android:textColor="#0C0C0C"
        android:gravity="center"

        android:text="Welcome to Rajadhani Campus Connect"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/VisitorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#82D5E7"
            android:padding="16dp"
            android:textSize="25dp"
            android:layout_margin="4dp"

            android:text="Visitor" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#DAFDFE"
            android:padding="16dp"
            android:textSize="25dp"
            android:layout_margin="4dp"

            android:text="Student"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9FCFD"
            android:padding="16dp"
            android:textSize="25dp"
            android:layout_margin="4dp"

            android:text="Staff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7DDDF2"
            android:padding="16dp"
            android:textSize="25dp"
            android:layout_margin="4dp"

            android:text="Admin"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/rietpic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:paddingTop="1dp"
        android:textColor="#111111"

        android:text="Rajadhani Campus Connect" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#050505"

        android:text="An Initiative by Students of RIET" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:paddingBottom="10dp"

        android:text="Developed by CSE 2017-21 Batch"/>

</LinearLayout>