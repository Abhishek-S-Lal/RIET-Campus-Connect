<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visitor.MainActivity"
    android:background="#00BCD4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/main_welcome_text"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:background="#D6FDFE"
        android:textColor="#0C0C0C"
        android:gravity="center"

        android:textSize="30sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/TextAppearance.AppCompat.Button"
            android:id="@+id/VisitorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#82D5E7"
            android:padding="16dp"
            android:text="@string/main_button1_title"
            android:layout_margin="4dp"

            android:textSize="25sp" />

        <Button
            android:id="@+id/StudentButton"
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#DAFDFE"
            android:padding="16dp"
            android:text="@string/main_button2_title"
            android:layout_margin="4dp"

            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#D9FCFD"
            android:padding="16dp"
            android:text="@string/main_button3_title"
            android:layout_margin="4dp"

            android:textSize="25sp" />

        <Button
            style="@style/TextAppearance.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7DDDF2"
            android:padding="16dp"
            android:text="@string/main_button4_title"
            android:layout_margin="4dp"

            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:contentDescription="cover pic"
        android:src="@drawable/rietpic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/app_fullname"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:paddingTop="1dp"
        android:textColor="#111111"

        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#050505"

        android:text="@string/bottom_credits" />


</LinearLayout>